<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="loginViewModel"
            type="com.example.musicplayer.viewmodel.LoginViewModel" />

        <variable
            name="loginFragment"
            type="com.example.musicplayer.view.fragment.LoginFragment" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        tools:context=".view.fragment.LoginFragment">

        <EditText
            android:id="@+id/text_plain_user_name_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/username"
            android:onTextChanged="@{loginViewModel::onTextChangedUserName}"
            android:textColorHint="@color/orange_light" />


        <EditText
            android:id="@+id/text_plain_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:hint="@string/password"
            android:onTextChanged="@{loginViewModel::onTextChangedPassword}"
            android:textColorHint="@color/orange_light" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:onClick="@{() -> loginViewModel.onClickListener(loginFragment)}"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


    </FrameLayout>
</layout>

