<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>

        <variable
            name="listAlbumsArtistsViewModel"
            type="com.example.musicplayer.viewmodel.ListAlbumsArtistsViewModel" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="nameTab"
            type="String" />

    </data>

    <RelativeLayout
        android:id="@+id/row_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/img_view_artist"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_singer" />

        <TextView
            android:id="@+id/text_view_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/img_view_artist"
            android:layout_toRightOf="@+id/img_view_artist"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@{listAlbumsArtistsViewModel.artistsNames.get(position)}" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/img_view_artist"
            android:layout_marginTop="3dp"
            android:background="?android:attr/listDivider" />
    </RelativeLayout>
</layout>
